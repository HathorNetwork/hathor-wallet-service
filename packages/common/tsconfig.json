{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./__tests__/*"],
      "@events/*": ["./__tests__/events/*"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
